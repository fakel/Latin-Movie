@import url('https://fonts.googleapis.com/css?family=Be+Vietnam&display=swap" rel="stylesheet')
@import "global"
.flex
	display flex
	align-items center
	flex-direction column
.content-bottom
	width 100%
	display flex
	align-items center
	flex-wrap wrap
	justify-content space-around
	.card
		width 15rem
		margin 0 0.5rem 1.5rem .5rem
		.img-fluid
			width 100%
			height 20rem
			object-fit fill
	.card-body
		display flex
		justify-content space-between
		flex-direction column
		height 10rem

		.card-title
			margin-bottom 0
			span
				font-size 15px
				margin-left 0.3rem
		.card-text
			margin-bottom 0
			.img-card
				width 1.5rem
			.rating
				font-size 20px
				margin-left 0.5rem
		.logo-imdb
			border-radius 50%
			position absolute
			top 285px
			right 10px
			width 60px
	.see-btn
		margin 0
		box-shadow none
		border-radius 0
		justify-content center
		text-transform none
		i
			margin-left 0.5rem
	.modal
		margin 0
