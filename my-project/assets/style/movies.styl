@import url('https://fonts.googleapis.com/css?family=Be+Vietnam&display=swap" rel="stylesheet')
@import "global"
.flex
	display flex
	align-items center
	flex-direction column
.content-top
	align-self flex-start
	margin 0 2rem
	.title-top
		font-size 1.15rem
		padding 1.5rem 0
		color $pink
		font-weight 700
		letter-spacing 0.05rem
		span
			color $gray-claro
.content-bottom
	width 100%
	display flex
	align-items center
	flex-wrap wrap
	justify-content center
	.card
		width 12rem
		margin 0 0.5rem 1.5rem .5rem
		border 1px solid #1a1a1a
		border-radius 0.25rem
		.img-fluid
			width 100%
			height 18rem
			object-fit fill
	.card-body
		display flex
		justify-content space-between
		flex-direction column
		height 11.5rem
		background-color #1a1a1a
		.card-title
			margin-bottom 0
			font-size 1rem
			color $gray-claro
			span
				font-size 12px
				margin-left 0.3rem
				color $pink
		.card-text
			margin-bottom 0
			.img-card
				width 1rem
			.rating
				font-size 17px
				margin-left 0.5rem
				color #b6b3b6
		.logo-imdb
			border-radius 50%
			position absolute
			top 255px
			right 10px
			width 60px
	.see-btn
		margin 0
		box-shadow none
		border-radius 3px
		justify-content center
		text-transform none
		background-color #2c2c2c !important
		color $blue
		font-size 14px
		font-weight 500
		letter-spacing 0.02rem
		line-height 1.25rem
		padding .55rem .75rem
		&:hover
			background-color #3c3c3c !important
		i
			margin-left 0.5rem
@media screen and (min-width: 993px)
	.content-top .title-top
		font-size 1.87rem
